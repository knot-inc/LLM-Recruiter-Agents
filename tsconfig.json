{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/test", "dist"]
}
